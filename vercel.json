{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|svg|html))$",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|svg|html))$",
      "dest": "/backend/$1"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}